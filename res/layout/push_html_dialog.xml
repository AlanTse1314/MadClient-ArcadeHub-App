<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/push_html_layout"
    android:layout_width="320dp"
    android:layout_height="240dp"
    android:background="#00000000"
    android:visibility="visible" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/keymacro_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <com.yunluo.android.arcadehub.download.DownLoadWebView
            android:id="@+id/push_html_webview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/push_html_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/keymacro_close" />

</RelativeLayout>