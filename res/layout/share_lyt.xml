<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity" >

    <FrameLayout
        android:id="@+id/share_title_lyt"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#404040" >

        <ImageView
            android:id="@+id/share_title_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="6dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/share_title_tv_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="分享"
            android:textColor="#fffff0"
            android:textSize="18dp" />

        <!-- <ImageView -->
        <!-- android:id="@+id/share_title_iv_share" -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_gravity="right" -->
        <!-- android:src="@drawable/ic_launcher" /> -->

        <TextView
            android:id="@+id/share_title_tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_margin="8dp"
            android:text="确定"
            android:textColor="#fffff0"
            android:textSize="18dp" />
    </FrameLayout>

    <!-- android:layout_above="@+id/share_container" -->

    <RelativeLayout
        android:id="@+id/share_et_lyt"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/share_title_lyt"
        android:layout_margin="4dp"
        android:background="#ffffff" >

        <!-- android:layout_toLeftOf="@+id/share_et_iv" -->

        <EditText
            android:id="@+id/share_et"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:background="#00000000"
            android:ems="10"
            android:gravity="left"
            android:text="街机中心" />

        <!--
             <ImageView
            android:id="@+id/share_et_iv"
