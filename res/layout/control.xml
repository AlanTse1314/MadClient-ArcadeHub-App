<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/control_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/control_child"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
         >
        
        <Button
            android:id="@+id/control_single_players"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:text="单人游戏"
            />
        <Button 
            android:id="@+id/control_bluetooth_players"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:text="蓝牙对战"
            android:layout_below="@+id/control_single_players"
            />
        <Button 
            android:id="@+id/control_wifi_players"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:text="网络对战"
            android:layout_below="@+id/control_bluetooth_players"
            />
        <Button 
            android:id="@+id/control_homepage"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:text="返回首页"
            android:layout_below="@+id/control_wifi_players" />
        
             <Button 
            android:id="@+id/control_bluetooth_players_one"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:text="蓝牙对战1"
            android:layout_below="@+id/control_homepage"
            />
        <Button 
            android:id="@+id/control_bluetooth_players_two"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:text="蓝牙对战2"
            android:layout_below="@+id/control_bluetooth_players_one"
            />
    </RelativeLayout>

</RelativeLayout>